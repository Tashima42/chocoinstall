#!/bin/sh
# update & upgrade #
echo "Updating and upgrading"
sudo apt-get update
sudo apt-get upgrade

clear 

echo "Adding PPAs"
# GIT PPA
sudo add-apt-repository ppa:git-core/ppa
# Docker
sudo add-apt-repository \
  "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) \
  stable"

clear 

echo "Updating"
sudo apt update

clear 

echo "Installing snap, git, virtualbox, mongodb, vlc, vscode, discord, chrome"
# install snap, git 
sudo apt install snapd git virtualbox virtualbox—ext–pack software–properties–common

# MongoDB install
sudo apt install -y mongodb

# Vlc Install
sudo snap install vlc

# VSCode install
sudo snap install code --classic

# Discords install
sudo snap install discord 

# Chrome
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
sudo apt install ./google-chrome-stable_current_amd64.deb

clear 

echo "Installing nvm, node, npm, yarn, vue/cli, docker"
# nvm install
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.3/install.sh | bash
nvm 
nvm install 14.7.0

# npm & yarn install
sudo apt install npm
sudo npm install -g yarn

# Vue install
sudo yarn global add @vue/cli
sudo yarn global add commitizen

# Docker 
# Docker dependencies 
sudo apt-get install \
apt-transport-https \
ca-certificates \
curl \
gnupg-agent \
software-properties-common

# Docker GPG 
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -


# Docker install
sudo apt-get install docker-ce docker-ce-cli containerd.io
